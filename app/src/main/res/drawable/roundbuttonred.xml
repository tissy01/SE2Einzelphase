<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3043C5" />
            <gradient android:angle="-90" android:startColor="#0F20AF" android:endColor="#1F3C91"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#2744AE" />
            <solid android:color="#2264D8"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#16298F" />
            <gradient android:angle="-90" android:startColor="#CA375B" android:endColor="#CA372B" />
        </shape>
    </item>
</selector>